<body>
    <div class="container">
        <div class="card" id="formulario-pergunta">
            <div class="card-header">
                <h3>Realizar Pergunta</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/salvarpergunta">
                    <label>Título</label>
                    <input type="text" placeholder="Título" class="form-control" name="titulo" autocomplete="off"
                        required>
                    <br>
                    <label>Descrição</label>
                    <textarea placeholder="Descreva sua pergunta" class="form-control" name="descricao"
                        required></textarea>
                    <br>
                    <button class="btn btn-success">Perguntar</button>
                </form>
            </div>
        </div>
    </div>
</body>
